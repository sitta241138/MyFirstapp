<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    tools:context="comsci.sitta.myfirstapp.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtTitel"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="@dimen/H1"
        android:id="@+id/titelView" />

    <Button
        android:id="@+id/btnMoreinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/MoreInfo"
        android:onClick="onClickMoreInfo"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titelView"
        android:layout_above="@id/btnMoreinfo"
        android:id="@+id/livTraffic"
        android:background="@color/colorAccent"
        android:layout_margin="@dimen/my_margin"/>
</RelativeLayout>
